module Boss

================================================================================
# type
================================================================================
augment
  METHODS
    method Cmd.require_type->Type
      local result = this.type
      if (not result) throw t.error( "Value expected." )
      return result

    method Cmd.require_value->Cmd
      if (not this.type) throw t.error( "Value expected." )
      return this

    method Cmd.type->Type
      return null

    method AddInt.type->Type
      return Program.type_Int

    method AddReal.type->Type
      return Program.type_Real

    method GetSingleton.type->Type
      return @type

    method GlobalPropertyDeclarations.type->Type
      return @type

    method IntToReal.type->Type
      return Program.type_Real

    method LiteralInt.type->Type
      return Program.type_Int

    method LiteralReal.type->Type
      return Program.type_Real

    method Local.type->Type
      return @type

    method LocalDeclarations.type->Type
      return @type

    method Property.type->Type
      return @type

    method PropertyDeclarations.type->Type
      return @type

    method ReadLocalInt.type->Type
      return Program.type_Int

    method TypeContext.type->Type
      return @type

    method TypedDestructuringLocal.type->Type
      return @type


endAugment
