module RogueScript

class NativeColor [singleton]
  METHODS
    method register( vm:VM )
      vm.register_type( "Graphics::Color", (value)=>value.is_color, &variant_type=Variant.TYPE_COLOR )
      vm.register_constructor( "Graphics::Color(Int32)", ()=>Color(VM.int(1)) )
      vm.register_method( "Graphics::Color.argb->Int32", ()=>VM.context->Int32 )
      #vm.register_method( "Random.int32->Int", ()=>Random.int32 )
      #vm.register_method( "Random.real->Real", ()=>Random.real )
endClass
